#include <iostream>
using namespace std;
void rever(int * values, int total){
    for (int i = 0; i < total / 2; i++) {
        int temp = values[i];
        values[i] = values[total - 1 - i];
        values[total - 1 - i] = temp;
    }
}
void show(int * values, int total){
    cout << "Array values:\n";
    for (int i = 0; i < total; i++) {
        cout << values[i] << " ";
    }
    cout << endl;
}
int main()
{
    int values[100], total;
    cout << "Enter number of elements: ";
    cin >> total;
    cout << "Enter the elements:";
    for (int i = 0; i < total; i++) {
        cin >> values[i];
    }
    rever( values, total);
    show(values, total);
}
